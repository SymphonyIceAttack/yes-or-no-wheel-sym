{
  "$schema": "https://charm.land/crush.json",
  "options": {
    "tui": { "compact_mode": true, "completions": {} },
    "disabled_tools": ["npm", "convert", "python3"]
  },
  "models": {
    "MinMax": {
      "model": "MinMax-M2",
      "provider": "MinMax",
      "think": true
    }
  },
  "tools": {
    "ls": {}
  },
  "permissions": {
    "allowed_tools": [
      "download",
      "magick",
      "pnpm",
      "biome",
      "grep",
      "bash",
      "view",
      "ls",
      "Read",
      "edit",
      "multiedit",
      "write",
      "tree",
      "mcp_context7_resolve_library_id",
      "mcp_context7_get_library_docs",
      "mcp_MiniMax-Mcp_text_to_image",
      "mcp_MiniMax-Mcp_music_generation",
      "mcp_MiniMax-Mcp_generate_video",
      "mcp_MiniMax-Mcp_text_to_audio",
      "mcp_MiniMax-Code_understand_imag",
      "mcp_MiniMax-Code_web_search"
    ]
  },
  "providers": {
    "MinMax": {
      "type": "anthropic",
      "base_url": "https://api.minimaxi.com/anthropic",
      "api_key": "$ANTHROPIC_API_KEY",
      "models": [
        {
          "id": "MinMax-M2",
          "name": "MinMax-M2",
          "cost_per_1m_in": 0.55,
          "cost_per_1m_out": 2.19,
          "cost_per_1m_in_cached": 0.27,
          "cost_per_1m_out_cached": 0.55,
          "context_window": 196608,
          "default_max_tokens": 16384,
          "can_reason": true,
          "reasoning_levels": ["low", "medium", "high"],
          "default_reasoning_effort": "high",
          "supports_attachments": false,
          "options": {}
        }
      ]
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    },

    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "$CONTEXT7_API_KEY"
      }
    },
    "MiniMax-Mcp": {
      "type": "stdio",
      "command": "uvx",
      "args": ["minimax-mcp", "-y"],
      "env": {
        "MINIMAX_API_KEY": "$MINIMAX_API_KEY",
        "MINIMAX_MCP_BASE_PATH": "/run/current-system/sw/bin/uvx",
        "MINIMAX_API_HOST": "https://api.minimaxi.com",
        "MINIMAX_API_RESOURCE_MODE": "url"
      }
    },
    "MiniMax-Code": {
      "type": "stdio",
      "command": "uvx",
      "args": ["minimax-coding-plan-mcp"],
      "env": {
        "MINIMAX_API_KEY": "$MINIMAX_API_KEY_CODE",
        "MINIMAX_MCP_BASE_PATH": "/run/current-system/sw/bin/uvx",
        "MINIMAX_API_HOST": "https://api.minimaxi.com",
        "MINIMAX_API_RESOURCE_MODE": "url"
      }
    },
    "serena": {
      "command": "uvx",
      "type": "stdio",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ]
    }
  },
  "lsp": {
    "go": {
      "command": "gopls",
      "filetypes": ["go"]
    },
    "nix": {
      "command": "nil",
      "filetypes": ["nix"]
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["ts", "tsx"]
    },
    "biome": {
      "command": "biome",
      "args": ["lsp-proxy"],
      "filetypes": ["ts", "tsx"]
    }
  }
}
